<?xml version="1.0" encoding="UTF-8"?>
<!-- camel-k: language=xml -->

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://camel.apache.org/schema/spring"
        xsi:schemaLocation="
            http://camel.apache.org/schema/spring
            https://camel.apache.org/schema/spring/camel-spring.xsd">





    <route id="file-reader">
        <!-- <from uri="file:tempfiles?delete=true&amp;recursive=true&amp;doneFileName=${file:name}.done"/> -->
        <from uri="aws2-s3:edge1-models"/>

        <!-- <from uri="file:tempfiles?delete=true&amp;recursive=true"/> -->
        <log message="file is: ${header.CamelAwsS3Key}"/>

        <setProperty name="name">
            <simple>${header.CamelAwsS3Key}</simple>
        </setProperty>

        <removeHeaders pattern="*"/>
        <to uri="direct:store-s3"/>
    </route>


    <route id="store-s3">
        <from uri="direct:store-s3"/>

        <setHeader name="CamelAwsS3Key">
            <simple>${exchangeProperty.name}</simple>
        </setHeader>

        <setHeader name="CamelAwsS3ContentType">
            <simple>application/octet-stream</simple>
        </setHeader>

        <log message="uploading to edge1-ready: ${header.CamelAwsS3Key}"/>

        <!-- <to uri="aws2-s3:data"/> -->
        <to uri="aws2-s3:edge1-ready"/>
    </route>


    <route id="pipeline-trigger">
      <from uri="kafka:trigger"/>
      <log message="got kafka event: ${body}"/>

      <!-- CALL to BACKEND -->
      <removeHeaders pattern="*"/>
      <setHeader name="Exchange.HTTP_METHOD">
        <constant>POST</constant>
      </setHeader>
      <setHeader name="Exchange.CONTENT_TYPE">
        <constant>application/json</constant>
      </setHeader>
      <setBody>
        <simple>{}</simple>
      </setBody>
      <to uri="http:el-train-model-listener.tf.svc:8080"/>
    </route>
</routes>
